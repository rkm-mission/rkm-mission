            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ramkrishnamathandmission.MainActivity" />
        </activity>
        <activity
            android:name=".ContactUs"
            android:label="@string/title_activity_contact_us"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ramkrishnamathandmission.MainActivity" />
        </activity>
        <activity
            android:name=".RamkrishnaMathandMission"
            android:label="@string/title_activity_rkmnm"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ramkrishnamathandmission.MainActivity" />
        </activity>
        <activity
            android:name=".Subscribe"
            android:label="@string/title_activity_subscribe"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ramkrishnamathandmission.MainActivity" />
        </activity>
    </application>

</manifest>
